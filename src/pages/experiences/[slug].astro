---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { getImageBaseUrl, getLinkUrl } from '../../utils/images';

export async function getStaticPaths() {
  const experiences = await getCollection('experiences');
  return experiences.map((experience) => ({
    params: { slug: experience.slug },
    props: { experience },
  }));
}

interface Props {
  experience: {
    id: string;
    slug: string;
    body: string;
    data: {
      title: string;
      description: string;
      image: string;
      category: string;
      location: string;
      startDate: Date;
      endDate: Date;
      price: string;
    };
  };
}

const { experience } = Astro.props;

// Get category data from content collection
const categories = await getCollection('event-category');
const categoryMap = new Map(categories.map((cat) => [cat.data.id, cat]));
const experienceCategory = categoryMap.get(experience.data.category);

// Get category name or fallback to capitalized category ID
function getCategoryName(): string {
  return (
    experienceCategory?.data.name ||
    experience.data.category.charAt(0).toUpperCase() + experience.data.category.slice(1)
  );
}

// Format date range
function formatDateRange(startDate: Date, endDate: Date): string {
  const options: Intl.DateTimeFormatOptions = {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  };
  const start = startDate.toLocaleDateString('en-US', options);
  const end = endDate.toLocaleDateString('en-US', options);
  return `${start} - ${end}`;
}
---

<Layout title={experience.data.title} description={experience.data.description} mainClass="pt-0">
  <article class="experience-page">
    <!-- Hero Section -->
    <div class="experience-hero relative h-[70vh] w-full overflow-hidden">
      <img
        src={`${getImageBaseUrl()}${experience.data.image}`}
        alt={experience.data.title}
        class="absolute h-full w-full object-cover scale-105"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"></div>

      <!-- Hero Content -->
      <div class="absolute bottom-0 left-0 right-0 z-20 px-6 pb-12 md:px-12 lg:px-20">
        <div class="max-w-5xl mx-auto">
          <!-- Category Badge -->
          <span class="category-badge inline-block px-4 py-1.5 rounded-full text-xs font-semibold uppercase tracking-wider mb-4">
            {getCategoryName()}
          </span>
          
          <!-- Title -->
          <h1 class="experience-title text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6">
            {experience.data.title}
          </h1>
          
          <!-- Quick Info with Price -->
          <div class="flex flex-wrap items-center gap-6 text-white/80 text-sm">
            <div class="flex items-center gap-2">
              <i class="fa-regular fa-calendar"></i>
              <time datetime={experience.data.startDate.toISOString()}>
                {formatDateRange(experience.data.startDate, experience.data.endDate)}
              </time>
            </div>
            <div class="flex items-center gap-2">
              <i class="fa-solid fa-location-dot"></i>
              <span>{experience.data.location}</span>
            </div>
            <div class="flex items-center gap-2">
              <i class="fa-solid fa-tag"></i>
              <span class="font-semibold text-lg">{experience.data.price}</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Area -->
    <div class="experience-content relative">
      <div class="px-6 md:px-12 lg:px-20 py-16">
        <div class="max-w-5xl mx-auto">
          <!-- Back Button -->
          <a
            href={getLinkUrl('/experiences')}
            class="back-btn mb-8 inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium transition-all duration-300"
          >
            <i class="fa-solid fa-arrow-left"></i>
            <span>Back to Experiences</span>
          </a>

          <!-- Description -->
        <div class="experience-description mb-10">
          <h2 class="text-2xl font-semibold mb-4">About This Experience</h2>
          <p class="text-lg leading-relaxed opacity-80">{experience.data.description}</p>
        </div>

        <!-- Body Content -->
        <div class="experience-body prose prose-lg max-w-none">
          <slot />
        </div>

        <!-- Share Section -->
        <div class="mt-16">
          <h3 class="text-xl font-semibold mb-6">Share this experience</h3>
          <div class="flex flex-wrap items-center gap-4">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(experience.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-btn w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
              aria-label="Share on X (Twitter)"
            >
              <i class="fa-brands fa-x-twitter text-xl"></i>
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-btn w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
              aria-label="Share on Facebook"
            >
              <i class="fa-brands fa-facebook-f text-xl"></i>
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-btn w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
              aria-label="Share on LinkedIn"
            >
              <i class="fa-brands fa-linkedin-in text-xl"></i>
            </a>
            <button
              class="share-btn w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
              aria-label="Copy link"
              onclick="navigator.clipboard.writeText(window.location.href); const icon = this.querySelector('i'); if(icon) { icon.className = 'fa-solid fa-check text-xl'; setTimeout(() => { icon.className = 'fa-solid fa-link text-xl'; }, 2000); }"
            >
              <i class="fa-solid fa-link text-xl"></i>
            </button>
          </div>
        </div>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  /* Hero Section */
  .experience-hero img {
    transition: transform 0.5s ease-out;
  }

  .experience-title {
    color: #ffffff !important;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  /* Back Button */
  .back-btn {
    color: rgba(255, 255, 255, 0.7);
  }

  .back-btn:hover {
    color: #ffffff;
    transform: translateX(-4px);
  }

  :global([data-theme='light']) .back-btn {
    color: #64748b;
  }

  :global([data-theme='light']) .back-btn:hover {
    color: #0f172a;
  }

  /* Category Badge */
  .category-badge {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Content Area */
  .experience-content {
    background: #000000;
    color: #ffffff;
  }

  :global([data-theme='light']) .experience-content {
    background: #f8fafc;
    color: #0f172a;
  }

  /* Description */
  .experience-description h2 {
    color: #ffffff;
  }

  :global([data-theme='light']) .experience-description h2 {
    color: #0f172a;
  }

  .experience-description p {
    color: rgba(255, 255, 255, 0.8);
  }

  :global([data-theme='light']) .experience-description p {
    color: #4b5563;
  }

  /* Share Section */
  .experience-content h3 {
    color: #ffffff;
  }

  :global([data-theme='light']) .experience-content h3 {
    color: #0f172a;
  }

  /* Share Buttons */
  .share-btn {
    color: rgba(255, 255, 255, 0.7);
    background: transparent;
  }

  .share-btn:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='light']) .share-btn {
    color: #64748b;
  }

  :global([data-theme='light']) .share-btn:hover {
    color: #0f172a;
    background: rgba(0, 0, 0, 0.05);
  }

  /* Body Content Prose */
  .experience-body {
    color: rgba(255, 255, 255, 0.85);
  }

  :global([data-theme='light']) .experience-body {
    color: #374151;
  }

  .experience-body :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .experience-body :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    color: #ffffff;
  }

  :global([data-theme='light']) .experience-body :global(h2) {
    color: #0f172a;
  }

  .experience-body :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #ffffff;
  }

  :global([data-theme='light']) .experience-body :global(h3) {
    color: #0f172a;
  }

  .experience-body :global(ul),
  .experience-body :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .experience-body :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.75;
  }

  .experience-body :global(a) {
    color: #60a5fa;
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .experience-body :global(a:hover) {
    color: #93c5fd;
  }

  :global([data-theme='light']) .experience-body :global(a) {
    color: #2563eb;
  }

  :global([data-theme='light']) .experience-body :global(a:hover) {
    color: #1d4ed8;
  }

  .experience-body :global(blockquote) {
    border-left: 3px solid rgba(255, 255, 255, 0.2);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: rgba(255, 255, 255, 0.7);
  }

  :global([data-theme='light']) .experience-body :global(blockquote) {
    border-color: #e5e7eb;
    color: #6b7280;
  }

  .experience-body :global(img) {
    border-radius: 1rem;
    margin: 2rem 0;
  }

  .experience-body :global(hr) {
    border-color: rgba(255, 255, 255, 0.1);
    margin: 3rem 0;
  }

  :global([data-theme='light']) .experience-body :global(hr) {
    border-color: #e5e7eb;
  }
</style>

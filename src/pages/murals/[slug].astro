---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render, type CollectionEntry } from 'astro:content';
import { getImageBaseUrl, getLinkUrl } from '../../utils/images';

export async function getStaticPaths() {
  const murals = await getCollection('murals');
  return murals.map((mural) => ({
    params: { slug: mural.slug },
    props: { mural },
  }));
}

type Props = {
  mural: CollectionEntry<'murals'>;
};

const { mural } = Astro.props;
const { Content } = await render(mural);

// Get the project this mural belongs to
const projects = await getCollection('projects');
const project = projects.find((p) => p.slug === mural.data.project);

// Get other murals from the same pillar
const allMurals = await getCollection('murals');
const relatedMurals = allMurals
  .filter((m) => m.id !== mural.id)
  .filter((m) => m.data.pillar === mural.data.pillar && m.data.project === mural.data.project)
  .slice(0, 3);
---

<Layout title={mural.data.title} description={mural.data.description} mainClass="pt-0">
  <article class="mural-page">
    <!-- Hero Section -->
    <div class="mural-hero relative h-[70vh] w-full overflow-hidden">
      <img
        src={`${getImageBaseUrl()}${mural.data.image}`}
        alt={mural.data.title}
        class="absolute h-full w-full object-cover scale-105"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"></div>

      <!-- Hero Content -->
      <div class="absolute bottom-0 left-0 right-0 z-20 px-6 pb-12 md:px-12 lg:px-20">
        <div class="max-w-5xl mx-auto">
          <!-- Pillar Badge -->
          <span
            class="pillar-badge inline-block px-4 py-1.5 rounded-full text-xs font-semibold uppercase tracking-wider mb-4"
          >
            {mural.data.pillarName}
          </span>

          <!-- Title -->
          <h1
            class="mural-title text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6"
          >
            {mural.data.title}
          </h1>

          <!-- Quick Info -->
          <div class="flex flex-wrap items-center gap-6 text-white/80 text-sm">
            {
              mural.data.artist && (
                <div class="flex items-center gap-2">
                  <i class="fa-solid fa-palette" />
                  <span>Artist: {mural.data.artist}</span>
                </div>
              )
            }
            {
              mural.data.location && (
                <div class="flex items-center gap-2">
                  <i class="fa-solid fa-location-dot" />
                  <span>{mural.data.location}</span>
                </div>
              )
            }
            {
              project && (
                <div class="flex items-center gap-2">
                  <i class="fa-solid fa-folder" />
                  <a
                    href={getLinkUrl(`/projects/${project.slug}`)}
                    class="hover:text-white underline"
                  >
                    {project.data.title}
                  </a>
                </div>
              )
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Area -->
    <div class="mural-content relative">
      <div class="px-6 md:px-12 lg:px-20 py-16">
        <div class="max-w-5xl mx-auto">
          <!-- Back Button -->
          {
            project && (
              <a
                href={getLinkUrl(`/projects/${project.slug}`)}
                class="back-btn mb-8 inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium transition-all duration-300"
              >
                <i class="fa-solid fa-arrow-left" />
                <span>Back to {project.data.title}</span>
              </a>
            )
          }

          <!-- Description -->
          <div class="mural-description mb-10">
            <p class="text-lg leading-relaxed opacity-80">{mural.data.description}</p>
          </div>

          <!-- Body Content -->
          <div class="mural-body prose prose-lg max-w-none">
            <Content />
          </div>

          <!-- Artist Information Section -->
          {
            mural.data.artistInfo && (
              <div class="artist-info-section mt-16 pt-12 border-t">
                <h2 class="text-3xl font-bold mb-8">Artist Information</h2>
                <div class="artist-info-card grid grid-cols-1 lg:grid-cols-3 gap-8">
                  <!-- Artist Photo -->
                  {
                    mural.data.artistInfo.photo && (
                      <div class="artist-photo">
                        <img
                          src={`${getImageBaseUrl()}${mural.data.artistInfo.photo}`}
                          alt={mural.data.artistInfo.name}
                          class="w-full h-auto rounded-lg object-cover shadow-lg"
                        />
                      </div>
                    )
                  }

                  <!-- Artist Details -->
                  <div
                    class={`artist-details ${mural.data.artistInfo.photo ? 'lg:col-span-2' : 'lg:col-span-3'}`}
                  >
                    <h3 class="text-2xl font-semibold mb-4">{mural.data.artistInfo.name}</h3>

                    {
                      mural.data.artistInfo.birthYear && mural.data.artistInfo.birthplace && (
                        <p class="text-sm opacity-70 mb-6">
                          Born {mural.data.artistInfo.birthYear} from {mural.data.artistInfo.birthplace}
                        </p>
                      )
                    }

                    {
                      mural.data.artistInfo.bio && (
                        <div class="mb-6">
                          <p class="leading-relaxed opacity-90">{mural.data.artistInfo.bio}</p>
                        </div>
                      )
                    }

                    <div class="artist-details-grid space-y-4">
                      {
                        mural.data.artistInfo.education && (
                          <div class="artist-detail-item">
                            <h4 class="font-semibold mb-1 flex items-center gap-2">
                              <i class="fa-solid fa-graduation-cap" />
                              <span>Education</span>
                            </h4>
                            <p class="opacity-80">{mural.data.artistInfo.education}</p>
                          </div>
                        )
                      }

                      {
                        mural.data.artistInfo.experience && (
                          <div class="artist-detail-item">
                            <h4 class="font-semibold mb-1 flex items-center gap-2">
                              <i class="fa-solid fa-briefcase" />
                              <span>Experience</span>
                            </h4>
                            <p class="opacity-80">{mural.data.artistInfo.experience}</p>
                          </div>
                        )
                      }

                      {
                        mural.data.artistInfo.inspiration && (
                          <div class="artist-detail-item">
                            <h4 class="font-semibold mb-1 flex items-center gap-2">
                              <i class="fa-solid fa-lightbulb" />
                              <span>Inspiration</span>
                            </h4>
                            <p class="opacity-80">{mural.data.artistInfo.inspiration}</p>
                          </div>
                        )
                      }

                      {
                        mural.data.artistInfo.mediums && (
                          <div class="artist-detail-item">
                            <h4 class="font-semibold mb-1 flex items-center gap-2">
                              <i class="fa-solid fa-palette" />
                              <span>Artistic Mediums</span>
                            </h4>
                            <p class="opacity-80">{mural.data.artistInfo.mediums}</p>
                          </div>
                        )
                      }

                      {
                        mural.data.artistInfo.vastBhutan && (
                          <div class="artist-detail-item">
                            <h4 class="font-semibold mb-1 flex items-center gap-2">
                              <i class="fa-solid fa-heart" />
                              <span>VAST Bhutan</span>
                            </h4>
                            <p class="opacity-80">{mural.data.artistInfo.vastBhutan}</p>
                          </div>
                        )
                      }

                      {
                        mural.data.artistInfo.recentProject && (
                          <div class="artist-detail-item">
                            <h4 class="font-semibold mb-1 flex items-center gap-2">
                              <i class="fa-solid fa-paintbrush" />
                              <span>Recent Project</span>
                            </h4>
                            <p class="opacity-80">{mural.data.artistInfo.recentProject}</p>
                          </div>
                        )
                      }
                    </div>

                    <!-- Contact Information -->
                    {
                      mural.data.artistInfo.contact && (
                        <div class="artist-contact mt-8 pt-6 border-t">
                          <h4 class="font-semibold mb-4 flex items-center gap-2">
                            <i class="fa-solid fa-envelope" />
                            <span>Connect</span>
                          </h4>
                          <div class="flex flex-wrap items-center gap-4">
                            {
                              mural.data.artistInfo.contact.tiktok && (
                                <a
                                  href={mural.data.artistInfo.contact.tiktok}
                                  target="_blank"
                                  rel="noopener noreferrer"
                                  class="contact-link w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                                  aria-label="TikTok"
                                >
                                  <i class="fa-brands fa-tiktok text-xl"></i>
                                </a>
                              )
                            }
                            {
                              mural.data.artistInfo.contact.instagram && (
                                <a
                                  href={mural.data.artistInfo.contact.instagram}
                                  target="_blank"
                                  rel="noopener noreferrer"
                                  class="contact-link w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                                  aria-label="Instagram"
                                >
                                  <i class="fa-brands fa-instagram text-xl"></i>
                                </a>
                              )
                            }
                            {
                              mural.data.artistInfo.contact.facebook && (
                                <a
                                  href={mural.data.artistInfo.contact.facebook}
                                  target="_blank"
                                  rel="noopener noreferrer"
                                  class="contact-link w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                                  aria-label="Facebook"
                                >
                                  <i class="fa-brands fa-facebook-f text-xl"></i>
                                </a>
                              )
                            }
                            {
                              mural.data.artistInfo.contact.twitter && (
                                <a
                                  href={mural.data.artistInfo.contact.twitter}
                                  target="_blank"
                                  rel="noopener noreferrer"
                                  class="contact-link w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                                  aria-label="Twitter"
                                >
                                  <i class="fa-brands fa-x-twitter text-xl"></i>
                                </a>
                              )
                            }
                            {
                              mural.data.artistInfo.contact.linkedin && (
                                <a
                                  href={mural.data.artistInfo.contact.linkedin}
                                  target="_blank"
                                  rel="noopener noreferrer"
                                  class="contact-link w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                                  aria-label="LinkedIn"
                                >
                                  <i class="fa-brands fa-linkedin-in text-xl"></i>
                                </a>
                              )
                            }
                            {
                              mural.data.artistInfo.contact.email && (
                                <a
                                  href={`mailto:${mural.data.artistInfo.contact.email}`}
                                  class="contact-link w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                                  aria-label="Email"
                                >
                                  <i class="fa-solid fa-envelope text-xl"></i>
                                </a>
                              )
                            }
                          </div>
                          {
                            mural.data.artistInfo.contact.name && (
                              <p class="text-sm opacity-70 mt-4">
                                Contact as: {mural.data.artistInfo.contact.name}
                              </p>
                            )
                          }
                        </div>
                      )
                    }
                  </div>
                </div>
              </div>
            )
          }

          <!-- Related Murals Section -->
          {
            relatedMurals.length > 0 && (
              <div class="mt-16 pt-12 border-t">
                <h2 class="text-2xl font-bold mb-8">Other Murals in {mural.data.pillarName}</h2>
                <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
                  {relatedMurals.map((relatedMural) => (
                    <a
                      href={getLinkUrl(`/murals/${relatedMural.slug}`)}
                      class="related-mural-card group"
                    >
                      <div class="related-mural-image relative h-48 overflow-hidden rounded-lg mb-4">
                        <img
                          src={`${getImageBaseUrl()}${relatedMural.data.image}`}
                          alt={relatedMural.data.title}
                          class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent" />
                      </div>
                      <h3 class="text-lg font-semibold mb-2">{relatedMural.data.title}</h3>
                      <p class="text-sm opacity-70 line-clamp-2">{relatedMural.data.description}</p>
                    </a>
                  ))}
                </div>
              </div>
            )
          }

          <!-- Share Section -->
          <div class="mt-16">
            <h3 class="text-xl font-semibold mb-6">Share this mural</h3>
            <div class="flex flex-wrap items-center gap-4">
              <a
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(mural.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                aria-label="Share on X (Twitter)"
              >
                <i class="fa-brands fa-x-twitter text-xl"></i>
              </a>
              <a
                href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                aria-label="Share on Facebook"
              >
                <i class="fa-brands fa-facebook-f text-xl"></i>
              </a>
              <a
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="share-btn w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                aria-label="Share on LinkedIn"
              >
                <i class="fa-brands fa-linkedin-in text-xl"></i>
              </a>
              <button
                class="share-btn w-10 h-10 flex items-center justify-center rounded-full transition-all duration-300"
                aria-label="Copy link"
                onclick="navigator.clipboard.writeText(window.location.href); const icon = this.querySelector('i'); if(icon) { icon.className = 'fa-solid fa-check text-xl'; setTimeout(() => { icon.className = 'fa-solid fa-link text-xl'; }, 2000); }"
              >
                <i class="fa-solid fa-link text-xl"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  /* Hero Section */
  .mural-hero img {
    transition: transform 0.5s ease-out;
  }

  .mural-title {
    color: #ffffff !important;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  /* Back Button */
  .back-btn {
    color: rgba(255, 255, 255, 0.7);
  }

  .back-btn:hover {
    color: #ffffff;
    transform: translateX(-4px);
  }

  :global([data-theme='light']) .back-btn {
    color: #64748b;
  }

  :global([data-theme='light']) .back-btn:hover {
    color: #0f172a;
  }

  /* Pillar Badge */
  .pillar-badge {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Content Area */
  .mural-content {
    background: #000000;
    color: #ffffff;
  }

  :global([data-theme='light']) .mural-content {
    background: #f8fafc;
    color: #0f172a;
  }

  /* Description */
  .mural-description h2 {
    color: #ffffff;
  }

  :global([data-theme='light']) .mural-description h2 {
    color: #0f172a;
  }

  .mural-description p {
    color: rgba(255, 255, 255, 0.8);
  }

  :global([data-theme='light']) .mural-description p {
    color: #4b5563;
  }

  /* Share Section */
  .mural-content h3 {
    color: #ffffff;
  }

  :global([data-theme='light']) .mural-content h3 {
    color: #0f172a;
  }

  /* Share Buttons */
  .share-btn {
    color: rgba(255, 255, 255, 0.7);
    background: transparent;
  }

  .share-btn:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='light']) .share-btn {
    color: #64748b;
  }

  :global([data-theme='light']) .share-btn:hover {
    color: #0f172a;
    background: rgba(0, 0, 0, 0.05);
  }

  /* Body Content Prose */
  .mural-body {
    color: rgba(255, 255, 255, 0.85);
  }

  :global([data-theme='light']) .mural-body {
    color: #374151;
  }

  .mural-body :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .mural-body :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    color: #ffffff;
  }

  :global([data-theme='light']) .mural-body :global(h2) {
    color: #0f172a;
  }

  .mural-body :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #ffffff;
  }

  :global([data-theme='light']) .mural-body :global(h3) {
    color: #0f172a;
  }

  .mural-body :global(ul),
  .mural-body :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .mural-body :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.75;
  }

  .mural-body :global(a) {
    color: #60a5fa;
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .mural-body :global(a:hover) {
    color: #93c5fd;
  }

  :global([data-theme='light']) .mural-body :global(a) {
    color: #2563eb;
  }

  :global([data-theme='light']) .mural-body :global(a:hover) {
    color: #1d4ed8;
  }

  /* Related Murals */
  .mural-content h2 {
    color: #ffffff;
  }

  :global([data-theme='light']) .mural-content h2 {
    color: #0f172a;
  }

  .mural-content .border-t {
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='light']) .mural-content .border-t {
    border-color: rgba(0, 0, 0, 0.1);
  }

  .related-mural-card {
    color: #ffffff;
  }

  :global([data-theme='light']) .related-mural-card {
    color: #0f172a;
  }

  .related-mural-card h3 {
    color: #ffffff;
  }

  :global([data-theme='light']) .related-mural-card h3 {
    color: #0f172a;
  }

  /* Artist Information Section */
  .artist-info-section h2 {
    color: #ffffff;
  }

  :global([data-theme='light']) .artist-info-section h2 {
    color: #0f172a;
  }

  .artist-info-section .border-t {
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='light']) .artist-info-section .border-t {
    border-color: rgba(0, 0, 0, 0.1);
  }

  .artist-info-card {
    color: #ffffff;
  }

  :global([data-theme='light']) .artist-info-card {
    color: #0f172a;
  }

  .artist-details h3 {
    color: #ffffff;
  }

  :global([data-theme='light']) .artist-details h3 {
    color: #0f172a;
  }

  .artist-detail-item h4 {
    color: #ffffff;
  }

  :global([data-theme='light']) .artist-detail-item h4 {
    color: #0f172a;
  }

  .artist-detail-item p {
    color: rgba(255, 255, 255, 0.8);
  }

  :global([data-theme='light']) .artist-detail-item p {
    color: #4b5563;
  }

  .artist-contact h4 {
    color: #ffffff;
  }

  :global([data-theme='light']) .artist-contact h4 {
    color: #0f172a;
  }

  .artist-contact .border-t {
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='light']) .artist-contact .border-t {
    border-color: rgba(0, 0, 0, 0.1);
  }

  .contact-link {
    color: rgba(255, 255, 255, 0.7);
    background: transparent;
  }

  .contact-link:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='light']) .contact-link {
    color: #64748b;
  }

  :global([data-theme='light']) .contact-link:hover {
    color: #0f172a;
    background: rgba(0, 0, 0, 0.05);
  }
</style>

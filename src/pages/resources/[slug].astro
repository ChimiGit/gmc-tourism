---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import { getLinkUrl } from '../../utils/images';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const resources = await getCollection('resources');
  return resources.map((resource) => ({
    params: { slug: resource.slug },
    props: { resource },
  }));
}

interface Props {
  resource: CollectionEntry<'resources'>;
}

const { resource } = Astro.props;
const { Content } = await render(resource);

// Format category name for display
function formatCategoryName(category: string): string {
  return category
    .split('-')
    .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Format area name for display
function formatAreaName(area: string): string {
  return area.charAt(0).toUpperCase() + area.slice(1);
}

// Get all resources for related section
const allResources = await getCollection('resources');
const relatedResources = allResources
  .filter(
    (r) =>
      r.slug !== resource.slug &&
      (r.data.category === resource.data.category || r.data.area === resource.data.area)
  )
  .slice(0, 3);
---

<Layout title={resource.data.title} description={resource.data.description} mainClass="pt-0">
  <article class="resource-page">
    <!-- Hero Section -->
    <div class="resource-hero">
      <div class="resource-hero-inner">
        <!-- Left: Image -->
        <div class="resource-hero-image">
          <img src={resource.data.image} alt={resource.data.title} class="hero-image" />
          <div class="image-overlay"></div>
        </div>

        <!-- Right: Content -->
        <div class="resource-hero-content">
          <!-- Back Button -->
          <a href={getLinkUrl('/resources')} class="back-btn">
            <i class="fa-solid fa-arrow-left"></i>
            <span>Back to Resources</span>
          </a>

          <!-- Category Badge -->
          <span class="category-badge">
            {formatCategoryName(resource.data.category)}
          </span>

          <!-- Title -->
          <h1 class="resource-title">
            {resource.data.title}
          </h1>

          <!-- Description -->
          <p class="resource-description">
            {resource.data.description}
          </p>

          <!-- Meta Info -->
          <div class="resource-meta">
            <div class="meta-item">
              <i class="fa-solid fa-location-dot"></i>
              <span>{formatAreaName(resource.data.area)}</span>
            </div>
            <div class="meta-item">
              <i class="fa-solid fa-globe"></i>
              <span>{resource.data.language}</span>
            </div>
            <div class="meta-item">
              <i class="fa-solid fa-building"></i>
              <span>{resource.data.publisher === 'jnto' ? 'JNTO' : 'Non-JNTO'}</span>
            </div>
          </div>

          <!-- Actions -->
          <div class="resource-actions">
            {
              resource.data.externalUrl && (
                <a
                  href={resource.data.externalUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="action-btn primary"
                >
                  <i class="fa-solid fa-external-link" />
                  <span>View Resource</span>
                </a>
              )
            }
            <button
              class="action-btn secondary"
              onclick="navigator.clipboard.writeText(window.location.href); const icon = this.querySelector('i'); const text = this.querySelector('span'); if(icon && text) { icon.className = 'fa-solid fa-check'; text.textContent = 'Copied!'; setTimeout(() => { icon.className = 'fa-solid fa-share-nodes'; text.textContent = 'Share'; }, 2000); }"
            >
              <i class="fa-solid fa-share-nodes"></i>
              <span>Share</span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="resource-content">
      <div class="resource-content-inner">
        <div class="content-body">
          <Content />
        </div>

        <!-- Download/View Section -->
        <div class="resource-cta">
          <div class="cta-card">
            <div class="cta-icon">
              <i class="fa-solid fa-file-pdf"></i>
            </div>
            <div class="cta-text">
              <h3>Download Resource</h3>
              <p>Get the full PDF version of this resource for offline viewing.</p>
            </div>
            <a
              href={resource.data.externalUrl || '#'}
              class="cta-btn"
              target="_blank"
              rel="noopener noreferrer"
            >
              <i class="fa-solid fa-download"></i>
              Download PDF
            </a>
          </div>
        </div>

        <!-- Share Section -->
        <div class="share-section">
          <h3>Share this resource</h3>
          <div class="share-buttons">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(resource.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-btn"
              aria-label="Share on X (Twitter)"
            >
              <i class="fa-brands fa-x-twitter"></i>
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-btn"
              aria-label="Share on Facebook"
            >
              <i class="fa-brands fa-facebook-f"></i>
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="share-btn"
              aria-label="Share on LinkedIn"
            >
              <i class="fa-brands fa-linkedin-in"></i>
            </a>
            <a
              href={`mailto:?subject=${encodeURIComponent(resource.data.title)}&body=${encodeURIComponent(Astro.url.href)}`}
              class="share-btn"
              aria-label="Share via Email"
            >
              <i class="fa-solid fa-envelope"></i>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Resources -->
    {
      relatedResources.length > 0 && (
        <div class="related-section">
          <div class="related-wrapper">
            <h2>Related Resources</h2>
            <div class="related-grid">
              {relatedResources.map((related) => (
                <a href={getLinkUrl(`/resources/${related.slug}`)} class="related-card">
                  <div class="related-image">
                    <img src={related.data.image} alt={related.data.title} loading="lazy" />
                  </div>
                  <div class="related-content">
                    <span class="related-category">
                      {formatCategoryName(related.data.category)}
                    </span>
                    <h3>{related.data.title}</h3>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>
      )
    }
  </article>
</Layout>

<style>
  /* Page Variables */
  .resource-page {
    --page-bg: #000000;
    --text-primary: #ffffff;
    --text-secondary: rgba(255, 255, 255, 0.7);
    --text-muted: rgba(255, 255, 255, 0.5);
    --border-color: rgba(255, 255, 255, 0.1);
    --card-bg: rgba(255, 255, 255, 0.03);
    --accent: #3b82f6;
  }

  :global([data-theme='light']) .resource-page {
    --page-bg: #ffffff;
    --text-primary: #0f172a;
    --text-secondary: #475569;
    --text-muted: #94a3b8;
    --border-color: #e2e8f0;
    --card-bg: #f8fafc;
    --accent: #2563eb;
  }

  /* Hero Section */
  .resource-hero {
    background: transparent;
    padding: 8rem 1.5rem 4rem;
  }

  @media (min-width: 768px) {
    .resource-hero {
      padding: 10rem 3rem 5rem;
    }
  }

  .resource-hero-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  @media (min-width: 1024px) {
    .resource-hero-inner {
      grid-template-columns: 400px 1fr;
      gap: 4rem;
    }
  }

  .resource-hero-image {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
  }

  .hero-image {
    width: 100%;
    aspect-ratio: 3 / 4;
    object-fit: cover;
    display: block;
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, transparent 60%, rgba(0, 0, 0, 0.2) 100%);
    pointer-events: none;
  }

  .resource-hero-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .back-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
    transition: all 0.3s ease;
  }

  .back-btn:hover {
    color: var(--text-primary);
    transform: translateX(-4px);
  }

  .category-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 100px;
    width: fit-content;
  }

  .resource-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .resource-title {
      font-size: 3rem;
    }
  }

  .resource-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  .resource-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .meta-item i {
    font-size: 0.85rem;
    opacity: 0.7;
  }

  .resource-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1rem;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.875rem 1.5rem;
    font-size: 0.9rem;
    font-weight: 500;
    border-radius: 10px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
  }

  .action-btn.primary {
    background: var(--accent);
    color: #ffffff;
  }

  .action-btn.primary:hover {
    background: #2563eb;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
  }

  .action-btn.secondary {
    background: var(--card-bg);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
  }

  .action-btn.secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--text-muted);
  }

  :global([data-theme='light']) .action-btn.secondary:hover {
    background: #f1f5f9;
  }

  /* Content Section */
  .resource-content {
    background: transparent;
    padding: 0 1.5rem 4rem;
  }

  @media (min-width: 768px) {
    .resource-content {
      padding: 0 3rem 5rem;
    }
  }

  .resource-content-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
  }

  @media (min-width: 1024px) {
    .resource-content-inner {
      grid-template-columns: 400px 1fr;
    }
  }

  .content-body {
    grid-column: 1 / -1;
    color: var(--text-secondary);
    font-size: 1.0625rem;
    line-height: 1.8;
  }

  .resource-cta,
  .share-section {
    grid-column: 1 / -1;
  }

  .content-body :global(h1),
  .content-body :global(h2),
  .content-body :global(h3) {
    color: var(--text-primary);
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .content-body :global(h1) {
    font-size: 2rem;
  }

  .content-body :global(h2) {
    font-size: 1.5rem;
  }

  .content-body :global(h3) {
    font-size: 1.25rem;
  }

  .content-body :global(p) {
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
  }

  .content-body :global(ul),
  .content-body :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .content-body :global(li) {
    margin-bottom: 0.75rem;
    color: var(--text-secondary);
  }

  .content-body :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .content-body :global(a:hover) {
    opacity: 0.8;
  }

  /* CTA Card */
  .resource-cta {
    margin-top: 3rem;
  }

  .cta-card {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 2rem;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 16px;
  }

  @media (min-width: 768px) {
    .cta-card {
      flex-direction: row;
      align-items: center;
    }
  }

  .cta-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(59, 130, 246, 0.1);
    border-radius: 12px;
    flex-shrink: 0;
  }

  .cta-icon i {
    font-size: 1.5rem;
    color: var(--accent);
  }

  .cta-text {
    flex: 1;
  }

  .cta-text h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  .cta-text p {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #ffffff;
    background: var(--accent);
    border-radius: 8px;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .cta-btn:hover {
    background: #2563eb;
    transform: translateY(-2px);
  }

  /* Share Section */
  .share-section {
    margin-top: 3rem;
    padding-top: 3rem;
    border-top: 1px solid var(--border-color);
  }

  .share-section h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .share-buttons {
    display: flex;
    gap: 0.75rem;
  }

  .share-btn {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    color: var(--text-muted);
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .share-btn:hover {
    color: var(--text-primary);
    background: rgba(59, 130, 246, 0.1);
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  /* Related Section */
  .related-section {
    background: var(--card-bg);
    padding: 4rem 1.5rem;
    border-top: 1px solid var(--border-color);
  }

  @media (min-width: 768px) {
    .related-section {
      padding: 5rem 3rem;
    }
  }

  .related-wrapper {
    max-width: 1200px;
    margin: 0 auto;
  }

  .related-wrapper h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 2rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .related-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .related-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .related-card {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: var(--page-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .related-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .related-image {
    width: 80px;
    height: 100px;
    border-radius: 8px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .related-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .related-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .related-category {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
  }

  .related-content h3 {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

---
import Layout from '../../layouts/Layout.astro';
import ProjectCard from '../../components/ui/ProjectCard.astro';
import { getCollection, render, type CollectionEntry } from 'astro:content';
import { getImageBaseUrl, getLinkUrl } from '../../utils/images';
import OurPartners from '../../components/sections/OurPartners.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const { Content } = await render(project);

// Get related projects (excluding current project)
const allProjects = await getCollection('projects');
const relatedProjects = allProjects.filter((p) => p.id !== project.id).slice(0, 3);

// Get all murals for this project
const allMurals = await getCollection('murals');
const projectMurals = allMurals.filter((m) => m.data.project === project.slug);

// Group murals by pillar
const muralsByPillar = {
  '1': projectMurals.filter((m) => m.data.pillar === '1'),
  '2': projectMurals.filter((m) => m.data.pillar === '2'),
  '3': projectMurals.filter((m) => m.data.pillar === '3'),
};

// Format date range if dates exist
function formatDateRange(startDate?: Date, endDate?: Date): string {
  if (!startDate) return '';
  const options: Intl.DateTimeFormatOptions = {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  };
  const start = startDate.toLocaleDateString('en-US', options);
  if (endDate) {
    const end = endDate.toLocaleDateString('en-US', options);
    return `${start} - ${end}`;
  }
  return start;
}
---

<Layout title={project.data.title} description={project.data.description} mainClass="pt-0">
  <article class="project-page">
    <!-- Hero Section -->
    <div class="project-hero relative h-[70vh] w-full overflow-hidden">
      <img
        src={`${getImageBaseUrl()}${project.data.image}`}
        alt={project.data.title}
        class="absolute h-full w-full object-cover scale-105"
      />
      <div class="absolute inset-0 bg-linear-to-t from-black via-black/40 to-transparent"></div>

      <!-- Hero Content -->
      <div class="absolute bottom-0 left-0 right-0 z-20 px-6 pb-12 md:px-12 lg:px-20">
        <div class="max-w-5xl mx-auto">
          <!-- Phase Badge -->
          {
            project.data.phase && (
              <span class="phase-badge inline-block px-4 py-1.5 rounded-full text-xs font-semibold uppercase tracking-wider mb-4">
                {project.data.phase}
              </span>
            )
          }

          <!-- Title -->
          <h1
            class="project-title text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight mb-6"
          >
            {project.data.title}
          </h1>

          <!-- Quick Info -->
          <div class="flex flex-wrap items-center gap-6 text-white/80 text-sm">
            {
              project.data.location && (
                <div class="flex items-center gap-2">
                  <i class="fa-solid fa-location-dot" />
                  <span>{project.data.location}</span>
                </div>
              )
            }
            {
              project.data.startDate && (
                <div class="flex items-center gap-2">
                  <i class="fa-regular fa-calendar" />
                  <time datetime={project.data.startDate.toISOString()}>
                    {formatDateRange(project.data.startDate, project.data.endDate)}
                  </time>
                </div>
              )
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Area -->
    <div class="project-content relative">
      <div class="px-6 md:px-12 lg:px-20 py-16">
        <div class="max-w-5xl mx-auto">
          <!-- Back Button -->
          <a
            href={getLinkUrl('/projects')}
            class="back-btn mb-8 inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium transition-all duration-300"
          >
            <i class="fa-solid fa-arrow-left"></i>
            <span>Back to Projects</span>
          </a>

          <!-- Description -->
          <div class="project-description mb-10">
            <h2 class="text-2xl font-semibold mb-4">About This Project</h2>
            <p class="text-lg leading-relaxed opacity-80">{project.data.description}</p>
          </div>

          <!-- Body Content -->
          <div class="project-body prose prose-lg max-w-none">
            <Content />
          </div>

          <!-- Murals Section -->
          {
            projectMurals.length > 0 && (
              <div class="mt-16">
                {Object.entries(muralsByPillar).map(([pillarNum, murals]) => {
                  if (murals.length === 0) return null;
                  const pillarName = murals[0]?.data.pillarName || `Pillar ${pillarNum}`;
                  return (
                    <div class="mb-12">
                      <h3 class="text-xl font-semibold mb-6">{pillarName}</h3>
                      <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                        {murals.map((mural) => (
                          <a
                            href={getLinkUrl(`/murals/${mural.slug}`)}
                            class="mural-link-card group p-4 rounded-lg border transition-all duration-300 hover:border-opacity-100"
                          >
                            <div class="flex items-start gap-4">
                              <div class="mural-link-image relative w-24 h-24 shrink-0 overflow-hidden rounded-lg">
                                <img
                                  src={`${getImageBaseUrl()}${mural.data.image}`}
                                  alt={mural.data.title}
                                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                />
                              </div>
                              <div class="flex-1">
                                <h4 class="text-lg font-semibold mb-2">{mural.data.title}</h4>
                                <p class="text-sm opacity-70 line-clamp-2">
                                  {mural.data.description}
                                </p>
                                {mural.data.artist && (
                                  <p class="text-xs opacity-60 mt-2">
                                    <i class="fa-solid fa-palette mr-1" />
                                    {mural.data.artist}
                                  </p>
                                )}
                              </div>
                            </div>
                          </a>
                        ))}
                      </div>
                    </div>
                  );
                })}
              </div>
            )
          }

          <!-- Our Partners Section -->
          <OurPartners />

          <!-- Related Projects Section -->
          {
            relatedProjects.length > 0 && (
              <div class="mt-16 pt-12 border-t">
                <h2 class="text-2xl font-bold mb-8">Related Projects</h2>
                <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
                  {relatedProjects.map((relatedProject) => (
                    <ProjectCard project={relatedProject} variant="simple" />
                  ))}
                </div>
              </div>
            )
          }
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  /* Hero Section */
  .project-hero img {
    transition: transform 0.5s ease-out;
  }

  .project-title {
    color: #ffffff !important;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  /* Back Button */
  .back-btn {
    color: rgba(255, 255, 255, 0.7);
  }

  .back-btn:hover {
    color: #ffffff;
    transform: translateX(-4px);
  }

  :global([data-theme='light']) .back-btn {
    color: #64748b;
  }

  :global([data-theme='light']) .back-btn:hover {
    color: #0f172a;
  }

  /* Phase Badge */
  .phase-badge {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    color: #ffffff;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Content Area */
  .project-content {
    background: #000000;
    color: #ffffff;
  }

  :global([data-theme='light']) .project-content {
    background: #f8fafc;
    color: #0f172a;
  }

  /* Description */
  .project-description h2 {
    color: #ffffff;
  }

  :global([data-theme='light']) .project-description h2 {
    color: #0f172a;
  }

  .project-description p {
    color: rgba(255, 255, 255, 0.8);
  }

  :global([data-theme='light']) .project-description p {
    color: #4b5563;
  }

  /* Share Section */
  .project-content h3 {
    color: #ffffff;
  }

  :global([data-theme='light']) .project-content h3 {
    color: #0f172a;
  }

  /* Share Buttons */
  .share-btn {
    color: rgba(255, 255, 255, 0.7);
    background: transparent;
  }

  .share-btn:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='light']) .share-btn {
    color: #64748b;
  }

  :global([data-theme='light']) .share-btn:hover {
    color: #0f172a;
    background: rgba(0, 0, 0, 0.05);
  }

  /* Body Content Prose */
  .project-body {
    color: rgba(255, 255, 255, 0.85);
  }

  :global([data-theme='light']) .project-body {
    color: #374151;
  }

  .project-body :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.8;
  }

  .project-body :global(h2) {
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    color: #ffffff;
  }

  :global([data-theme='light']) .project-body :global(h2) {
    color: #0f172a;
  }

  .project-body :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #ffffff;
  }

  :global([data-theme='light']) .project-body :global(h3) {
    color: #0f172a;
  }

  .project-body :global(ul),
  .project-body :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .project-body :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.75;
  }

  .project-body :global(a) {
    color: #60a5fa;
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .project-body :global(a:hover) {
    color: #93c5fd;
  }

  :global([data-theme='light']) .project-body :global(a) {
    color: #2563eb;
  }

  :global([data-theme='light']) .project-body :global(a:hover) {
    color: #1d4ed8;
  }

  .project-body :global(blockquote) {
    border-left: 3px solid rgba(255, 255, 255, 0.2);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: rgba(255, 255, 255, 0.7);
  }

  :global([data-theme='light']) .project-body :global(blockquote) {
    border-color: #e5e7eb;
    color: #6b7280;
  }

  .project-body :global(img) {
    border-radius: 1rem;
    margin: 2rem 0;
  }

  .project-body :global(hr) {
    border-color: rgba(255, 255, 255, 0.1);
    margin: 3rem 0;
  }

  :global([data-theme='light']) .project-body :global(hr) {
    border-color: #e5e7eb;
  }

  /* Related Projects */
  .project-content h2 {
    color: #ffffff;
  }

  :global([data-theme='light']) .project-content h2 {
    color: #0f172a;
  }

  .project-content .border-t {
    border-color: rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='light']) .project-content .border-t {
    border-color: rgba(0, 0, 0, 0.1);
  }

  /* Mural Links */
  .mural-link-card {
    border-color: rgba(255, 255, 255, 0.1);
    color: #ffffff;
  }

  :global([data-theme='light']) .mural-link-card {
    border-color: rgba(0, 0, 0, 0.1);
    color: #0f172a;
  }

  .mural-link-card:hover {
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }

  :global([data-theme='light']) .mural-link-card:hover {
    border-color: rgba(0, 0, 0, 0.3);
  }

  .mural-link-card h4 {
    color: #ffffff;
  }

  :global([data-theme='light']) .mural-link-card h4 {
    color: #0f172a;
  }

  .mural-link-image {
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  :global([data-theme='light']) .mural-link-image {
    border-color: rgba(0, 0, 0, 0.1);
  }
</style>

---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="Contact Us | GMC Tourism"
  description="Get in touch with GMC Tourism for any questions or inquiries."
  mainClass="pt-0"
>
  <!-- Contact Information Section -->
  <section class="contact-section min-h-screen flex items-center justify-center py-16 px-4 sm:px-6 lg:px-8">
    <div class="contact-container max-w-2xl mx-auto text-center">
      <h1 class="contact-title text-4xl md:text-5xl font-bold mb-8">
        Contact information
      </h1>
      
      <div class="contact-content space-y-4">
        <p class="contact-question text-lg md:text-xl">
          Any questions?
        </p>
        <p class="contact-text text-lg md:text-xl">
          Please contact us at
        </p>
        <a
          href="mailto:tourism@gmc.bt"
          class="contact-email text-2xl md:text-3xl font-medium inline-block mt-4 transition-opacity hover:opacity-80"
        >
          tourism@gmc.bt
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-section {
    --contact-bg: #ffffff;
    --contact-text: #000000;
    background: var(--contact-bg);
  }

  :global([data-theme='dark']) .contact-section {
    --contact-bg: #000000;
    --contact-text: #ffffff;
  }

  .contact-title {
    color: var(--contact-text);
  }

  .contact-question,
  .contact-text {
    color: var(--contact-text);
  }

  .contact-email {
    color: var(--contact-text);
    text-decoration: none;
  }

  .contact-email:hover {
    text-decoration: underline;
  }
</style>


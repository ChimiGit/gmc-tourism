---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('blog', ({ data }) => !data.draft);
---

<Layout title="Travel stories & guides" description="Inspiration, checklists, and guides from GMC Tourism.">
	<section class="mx-auto flex w-full max-w-6xl flex-col gap-16 px-6 py-24 lg:px-8">
		<header class="flex flex-col gap-4 text-center">
			<p class="text-sm font-semibold uppercase tracking-[0.3em] text-slate-400">
				Travel insights
			</p>
			<h1 class="text-4xl font-bold text-white sm:text-5xl">Stories from the mountains</h1>
			<p class="mx-auto max-w-2xl text-lg text-slate-300">
				Dive into curated itineraries, local culture, and performance tips for lightning-fast Astro
				sites designed for tourism brands.
			</p>
		</header>
		<div class="grid gap-10 md:grid-cols-2">
			{posts.map((post) => {
				const publishDate = new Date(post.data.publishDate);
				return (
					<a
						href={`/blog/${post.slug}/`}
						class="group flex flex-col gap-6 rounded-3xl border border-white/10 bg-white/5 p-8 shadow-soft transition hover:-translate-y-1 hover:bg-white/10"
					>
						<span class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-400">
							{publishDate.toLocaleDateString('en-US', {
								year: 'numeric',
								month: 'short',
								day: 'numeric',
							})}
						</span>
						<h2 class="text-2xl font-semibold text-white transition group-hover:text-sky-300">
							{post.data.title}
						</h2>
						<p class="text-base text-slate-300">{post.data.description}</p>
						<div class="mt-auto flex items-center gap-3 text-sm text-slate-400">
							<span>Read story</span>
							<span aria-hidden="true" class="text-sky-300 transition group-hover:translate-x-1">
								â†’
							</span>
						</div>
					</a>
				);
			})}
		</div>
	</section>
</Layout>


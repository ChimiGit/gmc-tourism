---
import Layout from '../../layouts/Layout.astro';
import EventCard from '../../components/ui/EventCard.astro';
import { getCollection } from 'astro:content';
import { getImageBaseUrl, getLinkUrl } from '../../utils/images';

export async function getStaticPaths() {
  const events = await getCollection('events');
  return events.map((event) => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

interface Props {
  event: {
    id: string;
    slug: string;
    body: string;
    data: {
      title: string;
      description: string;
      image: string;
      category: string;
      location: string;
      startDate: Date;
      endDate: Date;
      price: string;
    };
  };
}

const { event } = Astro.props;

// Get category data from content collection
const categories = await getCollection('event-category');
const categoryMap = new Map(categories.map((cat) => [cat.data.id, cat]));
const eventCategory = categoryMap.get(event.data.category);

// Get related events (same category, excluding current event)
const allEvents = await getCollection('events');
const relatedEvents = allEvents
  .filter((e) => e.id !== event.id)
  .filter((e) => e.data.category === event.data.category)
  .slice(0, 3);

// If not enough events in same category, fill with other events
if (relatedEvents.length < 3) {
  const otherEvents = allEvents
    .filter((e) => e.id !== event.id)
    .filter((e) => e.data.category !== event.data.category)
    .slice(0, 3 - relatedEvents.length);
  relatedEvents.push(...otherEvents);
}

// Get category name or fallback to capitalized category ID
function getCategoryName(): string {
  return (
    eventCategory?.data.name ||
    event.data.category.charAt(0).toUpperCase() + event.data.category.slice(1)
  );
}

// Format date range
function formatDateRange(startDate: Date, endDate: Date): string {
  const options: Intl.DateTimeFormatOptions = {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  };
  const start = startDate.toLocaleDateString('en-US', options);
  const end = endDate.toLocaleDateString('en-US', options);
  return `${start} - ${end}`;
}
---

<Layout title={event.data.title} description={event.data.description} mainClass="pt-0">
  <article class="events-article">
    <!-- Hero Image -->
    <div
      class="events-hero relative h-[50vh] w-full overflow-hidden flex items-center justify-center"
    >
      <img
        src={`${getImageBaseUrl()}${event.data.image}`}
        alt={event.data.title}
        class="absolute h-full w-full object-cover"
      />
      <div class="absolute inset-0 bg-linear-to-b from-black/50 via-black/30 to-black/60"></div>
      <!-- Title -->
      <h1
        class="events-hero-title relative z-10 text-center text-4xl font-bold text-white md:text-5xl lg:text-6xl px-4"
      >
        {event.data.title}
      </h1>
    </div>

    <!-- Content -->
    <div class="events-article-content container mx-auto max-w-4xl px-4 py-16 md:px-8">
      <!-- Back Link -->
      <a
        href={getLinkUrl('/events')}
        class="events-back-link mb-8 inline-flex items-center gap-2 text-sm font-regular transition-colors"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"
          ></path>
        </svg>
        Back to Events
      </a>

      <!-- Category Badge -->
      <div class="mb-4">
        <span
          class="event-article-badge bg-gray-600 inline-block rounded px-3 py-1 text-xs font-semibold uppercase tracking-wide text-white"
        >
          {getCategoryName()}
        </span>
      </div>

      <!-- Meta -->
      <div class="events-article-meta mb-8 flex flex-wrap items-center gap-4 text-sm">
        <div class="flex items-center gap-2">
          <i class="fa-solid fa-calendar-days"></i>
          <time datetime={event.data.startDate.toISOString()}>
            {formatDateRange(event.data.startDate, event.data.endDate)}
          </time>
        </div>
        <span>•</span>
        <div class="flex items-center gap-2">
          <i class="fa-solid fa-location-dot"></i>
          <span>{event.data.location}</span>
        </div>
        <span>•</span>
        <div class="flex items-center gap-2">
          <i class="fa-solid fa-tag"></i>
          <span class="font-semibold">{event.data.price}</span>
        </div>
      </div>

      <!-- Divider -->
      <hr class="events-divider mb-8" />

      <!-- Description -->
      <div class="events-article-description mb-12 text-lg">
        <p>{event.data.description}</p>
      </div>

      <!-- Main Event Image -->
      <div class="events-content-image mb-12 overflow-hidden rounded-lg">
        <img
          src={`${getImageBaseUrl()}${event.data.image}`}
          alt={event.data.title}
          class="h-full w-full object-cover"
          loading="lazy"
        />
      </div>

      <!-- Content -->
      <div class="events-article-body prose prose-lg max-w-none">
        <slot />
      </div>

      <!-- Related Events Section -->
      {
        relatedEvents.length > 0 && (
          <div class="mt-16 pt-12 border-t">
            <h2 class="events-related-title mb-8 text-2xl font-bold">Related Events</h2>
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
              {relatedEvents.map((relatedEvent) => (
                <EventCard event={relatedEvent} variant="simple" />
              ))}
            </div>
          </div>
        )
      }

      <!-- Share Section -->
      <div class="mt-12 border-t pt-8">
        <p class="events-share-title mb-4 text-sm font-semibold uppercase tracking-wide">
          Share this event
        </p>
        <div class="flex gap-4">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(event.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="events-share-btn flex h-10 w-10 items-center justify-center rounded-full transition-colors"
            aria-label="Share on Twitter"
          >
            <i class="fa-brands fa-twitter"></i>
          </a>
          <a
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="events-share-btn flex h-10 w-10 items-center justify-center rounded-full transition-colors"
            aria-label="Share on Facebook"
          >
            <i class="fa-brands fa-facebook-f"></i>
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="events-share-btn flex h-10 w-10 items-center justify-center rounded-full transition-colors"
            aria-label="Share on LinkedIn"
          >
            <i class="fa-brands fa-linkedin-in"></i>
          </a>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .events-hero-title {
    color: #ffffff !important;
    line-height: 1.2;
  }

  :global([data-theme='light']) .events-hero-title {
    color: #ffffff !important;
  }

  .events-article-content {
    --article-bg: #000000;
    --article-text: #ffffff;
    --article-text-secondary: #9ca3af;
    --article-border: rgba(255, 255, 255, 0.1);
    --article-link: #3b82f6;
    --article-link-hover: #60a5fa;
    background: var(--article-bg);
  }

  :global([data-theme='light']) .events-article-content {
    --article-bg: #ffffff;
    --article-text: #111827;
    --article-text-secondary: #6b7280;
    --article-border: rgba(0, 0, 0, 0.1);
  }

  .events-back-link {
    color: var(--article-link);
  }

  .events-back-link:hover {
    color: var(--article-link-hover);
  }

  .events-article-title {
    color: var(--article-text);
  }

  .events-article-meta {
    color: var(--article-text-secondary);
  }

  .events-article-description {
    color: var(--article-text);
  }

  .events-divider {
    border-color: var(--article-border);
  }

  .events-article-body {
    color: var(--article-text);
  }

  .events-share-title {
    color: var(--article-text-secondary);
  }

  .events-related-title {
    color: var(--article-text);
  }

  .events-share-btn {
    background: rgba(59, 130, 246, 0.1);
    color: var(--article-link);
  }

  .events-share-btn:hover {
    background: rgba(59, 130, 246, 0.2);
    color: var(--article-link-hover);
  }

  /* Prose styles for content */
  .events-article-body :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.75;
    color: var(--article-text);
  }

  .events-article-body :global(h2) {
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    color: var(--article-text);
  }

  .events-article-body :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--article-text);
  }

  .events-article-body :global(ul),
  .events-article-body :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .events-article-body :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.75;
    color: var(--article-text);
  }

  .events-article-body :global(a) {
    color: var(--article-link);
    text-decoration: underline;
  }

  .events-article-body :global(a:hover) {
    color: var(--article-link-hover);
  }

  .events-article-body :global(strong) {
    font-weight: 700;
  }

  .events-article-body :global(em) {
    font-style: italic;
  }

  .events-article-body :global(blockquote) {
    border-left: 4px solid var(--article-border);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--article-text-secondary);
  }

  /* Image styles in content */
  .events-content-image {
    aspect-ratio: 16/9;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .events-content-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .events-article-body :global(img) {
    border-radius: 0.5rem;
    margin: 2rem 0;
    width: 100%;
    height: auto;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .events-article-body :global(figure) {
    margin: 2rem 0;
    text-align: center;
  }

  .events-article-body :global(figcaption) {
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: var(--article-text-secondary);
    font-style: italic;
  }

  /* Enhanced content layout */
  .events-article-body :global(.content-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .events-article-body :global(.content-image-full) {
    width: 100%;
    margin: 2rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .events-article-body :global(.content-image-half) {
    width: 50%;
    margin: 2rem auto;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .events-article-body :global(.content-image-half) {
      width: 100%;
    }
  }

  .event-article-badge {
    background-color: #4b5563 !important; /* bg-gray-600 */
    color: #ffffff !important; /* text-white */
  }

  :global([data-theme='light']) .event-article-badge {
    background-color: #4b5563 !important; /* bg-gray-600 */
    color: #ffffff !important; /* text-white */
  }
</style>

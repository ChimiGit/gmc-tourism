---
interface Props {
  type?: 'info' | 'success' | 'warning' | 'tip';
  title?: string;
}

const typeStyles: Record<NonNullable<Props['type']>, string> = {
  info: 'border-sky-400/60 bg-sky-400/10 text-sky-100',
  success: 'border-emerald-400/60 bg-emerald-400/10 text-emerald-100',
  warning: 'border-amber-400/60 bg-amber-400/10 text-amber-100',
  tip: 'border-fuchsia-400/60 bg-fuchsia-400/10 text-fuchsia-100',
};

const { type = 'info', title } = Astro.props as Props;
---

<div class:list={['card border p-5 text-sm leading-relaxed', typeStyles[type]]}>
  {title && <p class="mb-2 text-sm font-semibold uppercase tracking-[0.2em]">{title}</p>}
  <div class="space-y-3 text-base">
    <slot />
  </div>
</div>

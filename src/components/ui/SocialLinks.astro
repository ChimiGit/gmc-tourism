---
import { getImageBaseUrl } from '../../utils/images';

export interface SocialLink {
  platform: string;
  url: string;
}

interface Props {
  links: SocialLink[];
}

const { links = [] } = Astro.props as Props;
---

<div class="flex flex-row items-center gap-4">
  {
    links.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={`Visit our ${link.platform} page`}
        class="brightness-100 contrast-50 transition-transform duration-200 ease-in-out hover:scale-110"
      >
        <img
          src={`${getImageBaseUrl()}/social_icon/${link.platform}-light.svg`}
          alt={link.platform}
          width="50"
          height="50"
          loading="lazy"
          decoding="async"
        />
      </a>
    ))
  }
</div>

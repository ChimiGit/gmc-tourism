---
import { getLinkUrl } from '../../utils/images';

interface Props {
  resource: {
    slug: string;
    data: {
      title: string;
      description: string;
      image: string;
      publisher: 'jnto' | 'non-jnto';
      category: string;
      area: string;
      language: string;
      externalUrl?: string;
      featured?: boolean;
    };
  };
}

const { resource } = Astro.props;
const { title, description, image, language } = resource.data;
const resourceUrl = getLinkUrl(`/resources/${resource.slug}`);
---

<a href={resourceUrl} class="resource-card group">
  <!-- Image Container -->
  <div class="resource-image-wrapper">
    <img
      src={image}
      alt={title}
      class="resource-image"
      loading="lazy"
    />
    <div class="resource-image-overlay"></div>
  </div>
  
  <!-- Content -->
  <div class="resource-content">
    <!-- Title -->
    <h3 class="resource-title">
      {title}
    </h3>
    
    <!-- Description -->
    <p class="resource-description">
      {description}
    </p>
    
    <!-- Language Badge -->
    <div class="resource-footer">
      <span class="resource-badge">
        {language}
      </span>
    </div>
  </div>
</a>

<style>
  .resource-card {
    --card-bg: #ffffff;
    --card-border: rgba(0, 0, 0, 0.08);
    --card-shadow: 0 1px 3px rgba(0, 0, 0, 0.06);
    --card-shadow-hover: 0 12px 40px rgba(0, 0, 0, 0.12);
    --title-color: #1a1a1a;
    --desc-color: #64748b;
    --badge-bg: #1e3a5f;
    
    display: flex;
    flex-direction: column;
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    border: 1px solid var(--card-border);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
  }

  .resource-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--card-shadow-hover);
    border-color: transparent;
  }

  .resource-image-wrapper {
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  }

  .resource-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .resource-card:hover .resource-image {
    transform: scale(1.08);
  }

  .resource-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 50%,
      rgba(0, 0, 0, 0.02) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .resource-card:hover .resource-image-overlay {
    opacity: 1;
  }

  .resource-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: 1.25rem;
    gap: 0.75rem;
  }

  .resource-title {
    font-size: 1.05rem;
    font-weight: 600;
    line-height: 1.4;
    color: var(--title-color);
    letter-spacing: -0.01em;
    position: relative;
    display: inline-block;
  }

  .resource-title::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: currentColor;
    opacity: 0.3;
    transition: opacity 0.3s ease;
  }

  .resource-card:hover .resource-title::after {
    opacity: 0.6;
  }

  .resource-description {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--desc-color);
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .resource-footer {
    margin-top: auto;
    padding-top: 0.5rem;
  }

  .resource-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 1rem;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: #ffffff;
    background: var(--badge-bg);
    border-radius: 6px;
    transition: background 0.3s ease;
  }

  .resource-card:hover .resource-badge {
    background: #0f2847;
  }

  /* Dark theme */
  :global([data-theme='dark']) .resource-card {
    --card-bg: #0a0a0a;
    --card-border: rgba(255, 255, 255, 0.06);
    --card-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    --card-shadow-hover: 0 20px 50px rgba(0, 0, 0, 0.5);
    --title-color: #f8fafc;
    --desc-color: #94a3b8;
    --badge-bg: #1e40af;
  }

  :global([data-theme='dark']) .resource-image-wrapper {
    background: linear-gradient(135deg, #1e1e1e 0%, #0f0f0f 100%);
  }

  :global([data-theme='dark']) .resource-card:hover .resource-badge {
    background: #1e3a8a;
  }

  :global([data-theme='dark']) .resource-image-overlay {
    background: linear-gradient(
      180deg,
      transparent 40%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }
</style>

---
import { getCollection } from 'astro:content';

const allEvents = await getCollection('events');
const featuredEvents = allEvents
  .filter((event) => event.data.featured)
  .sort((a, b) => a.data.startDate.getTime() - b.data.startDate.getTime());

// Format date range
function formatDateRange(startDate: Date, endDate: Date): string {
  const options: Intl.DateTimeFormatOptions = { month: 'short', day: 'numeric' };
  const start = startDate.toLocaleDateString('en-US', options);
  const end = endDate.toLocaleDateString('en-US', options);
  return `${start} - ${end}`;
}

// Get category color classes
function getCategoryColor(category: string): string {
  const colors: Record<string, string> = {
    CULTURE: 'bg-red-600',
    SHOPPING: 'bg-orange-600',
    ACTIVITIES: 'bg-pink-600',
    NATURE: 'bg-green-600',
    FESTIVAL: 'bg-purple-600',
  };
  return colors[category] || 'bg-blue-600';
}
---

<section class="events-section py-16 px-4 sm:px-6 lg:px-8">
  <div class="events-container max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="events-title text-3xl sm:text-4xl font-bold mb-4">Recommended Experiences</h2>
      <p class="events-subtitle text-lg max-w-2xl mx-auto">
        Discover your next adventure with our curated recommendations
      </p>
    </div>

    <!-- Events Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        featuredEvents.map((event) => (
          <div class="events-card rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
            {/* Event Image */}
            <div class="relative h-48 overflow-hidden">
              <img
                src={event.data.image}
                alt={event.data.title}
                class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
              />
              {/* Category Badge */}
              <div class="absolute bottom-4 left-4">
                <span
                  class={`${getCategoryColor(event.data.category)} text-white text-xs font-semibold px-3 py-1 rounded uppercase tracking-wide`}
                >
                  {event.data.category}
                </span>
              </div>
            </div>

            {/* Event Details */}
            <div class="p-5">
              {/* Title */}
              <h3 class="events-card-title text-xl font-bold mb-4 line-clamp-2">
                {event.data.title}
              </h3>

              {/* Location */}
              <div class="flex items-start gap-2 mb-3">
                <svg
                  class="events-icon w-5 h-5 shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                </svg>
                <span class="events-meta text-sm">{event.data.location}</span>
              </div>

              {/* Date */}
              <div class="flex items-start gap-2 mb-3">
                <svg
                  class="events-icon w-5 h-5 shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                  />
                </svg>
                <span class="events-meta text-sm">
                  {formatDateRange(event.data.startDate, event.data.endDate)}
                </span>
              </div>

              {/* Price */}
              <div class="flex items-start gap-2">
                <svg
                  class="events-icon w-5 h-5 shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"
                  />
                </svg>
                <span class="events-price text-sm font-semibold">{event.data.price}</span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <style>
    /* Align Events palette with FAQSection variables */
    .events-section {
      --faq-bg: #050505;
      --faq-heading: #f8fafc;
      --faq-body: #cbd5f5;
      --faq-number: #94a3b8;
      --faq-tag: #94a3b8;
      --faq-border: rgba(255, 255, 255, 0.12);
      --faq-icon: #ffffff;
      --faq-button-bg: rgba(255, 255, 255, 0.05);
      background: var(--faq-bg);
      color: var(--faq-body);
    }
    :global([data-theme='light'] .events-section) {
      --faq-bg: radial-gradient(circle at top, rgba(59, 130, 246, 0.2), transparent 60%) #f7f8fc;
      --faq-heading: #0f172a;
      --faq-body: #475569;
      --faq-number: #94a3b8;
      --faq-tag: #94a3b8;
      --faq-border: rgba(15, 23, 42, 0.15);
      --faq-icon: #0f172a;
      --faq-button-bg: rgba(15, 23, 42, 0.05);
    }

    .events-title {
      color: var(--faq-heading);
    }
    .events-subtitle {
      color: var(--faq-body);
    }
    .events-card {
      background: var(--faq-button-bg);
      border: 1px solid var(--faq-border);
    }
    .events-card-title {
      color: var(--faq-heading);
    }
    .events-meta {
      color: var(--faq-body);
    }
    .events-icon {
      color: var(--faq-icon);
    }
    .events-price {
      color: var(--faq-heading);
    }
  </style>
</section>

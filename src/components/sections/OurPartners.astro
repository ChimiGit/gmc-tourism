---
import { getCollection } from 'astro:content';
import { getImageBaseUrl } from '../../utils/images';

// Get all partners from MDX and sort by order
const allPartners = await getCollection('partners');
const partners = allPartners
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
  .map((partner) => ({
    name: partner.data.name,
    logo: partner.data.logo,
    website: partner.data.website,
  }));

// Duplicate partners for seamless loop
const duplicatedPartners = [...partners, ...partners, ...partners];
---

<!-- Our Partners Section -->
<section class="partners-section py-16 px-4 sm:px-6 lg:px-8 overflow-hidden">
  <div class="partners-container max-w-7xl mx-auto">
    <h2 class="partners-section-title mb-12 text-center text-4xl md:text-5xl font-bold">
      Our Partners
    </h2>

    <!-- Marquee Container -->
    <div class="partners-marquee-wrapper relative">
      <!-- Left Fade -->
      <div class="partners-fade partners-fade-left"></div>

      <!-- Marquee -->
      <div class="partners-marquee">
        <div class="partners-marquee-content">
          {
            duplicatedPartners.map((partner, index) => (
              <div class="partners-logo-item">
                {partner.website ? (
                  <a
                    href={partner.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="partners-link"
                  >
                    <img
                      src={`${getImageBaseUrl()}${partner.logo}`}
                      alt={partner.name}
                      class="partners-logo"
                    />
                  </a>
                ) : (
                  <img
                    src={`${getImageBaseUrl()}${partner.logo}`}
                    alt={partner.name}
                    class="partners-logo"
                  />
                )}
              </div>
            ))
          }
        </div>
      </div>

      <!-- Right Fade -->
      <div class="partners-fade partners-fade-right"></div>
    </div>
  </div>
</section>

<style>
  .partners-section {
    --partners-bg: #000000;
    --partners-text: #ffffff;
    background: var(--partners-bg);
  }

  :global([data-theme='light']) .partners-section {
    --partners-bg: #f5f5f5;
    --partners-text: #000000;
  }

  .partners-section-title {
    color: var(--partners-text);
  }

  .partners-marquee-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 10%,
      black 90%,
      transparent 100%
    );
  }

  .partners-marquee {
    display: flex;
    width: fit-content;
    animation: marquee 30s linear infinite;
  }

  .partners-marquee-content {
    display: flex;
    align-items: center;
    gap: 4rem;
    padding: 2rem 0;
  }

  .partners-logo-item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 200px;
    height: 120px;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .partners-logo-item:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-4px);
  }

  .partners-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }

  .partners-logo {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: grayscale(100%) opacity(0.7);
    transition: filter 0.3s ease;
  }

  .partners-logo-item:hover .partners-logo {
    filter: grayscale(0%) opacity(1);
  }

  .partners-fade {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 150px;
    pointer-events: none;
    z-index: 10;
  }

  .partners-fade-left {
    left: 0;
    background: linear-gradient(to right, var(--partners-bg), transparent);
  }

  .partners-fade-right {
    right: 0;
    background: linear-gradient(to left, var(--partners-bg), transparent);
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-33.333%);
    }
  }

  /* Pause on hover */
  .partners-marquee-wrapper:hover .partners-marquee {
    animation-play-state: paused;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .partners-logo-item {
      width: 150px;
      height: 90px;
      padding: 1rem;
    }

    .partners-marquee-content {
      gap: 2rem;
    }

    .partners-fade {
      width: 80px;
    }
  }
</style>

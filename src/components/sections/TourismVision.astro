---
import { getImageBaseUrl } from '../../utils/images';
---

<section class="tourism-vision-section relative w-full overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 h-full w-full overflow-hidden">
    <img
      src={`${getImageBaseUrl()}/backgrounds/BIG - Gelephu Minfulness City-107.png`}
      alt="Tourism 2040 Vision Background"
      class="absolute h-full w-full object-cover object-center scale-105"
    />
    <!-- Dark Overlay -->
    <div class="absolute inset-0 z-10 bg-black/40"></div>
  </div>

  <!-- Content Container -->
  <div
    class="relative z-20 flex min-h-[60vh] w-full flex-col items-center justify-center px-6 sm:px-8 lg:px-12 py-20"
  >
    <div class="container mx-auto max-w-5xl text-center">
      <h2
        class="vision-title text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 drop-shadow-lg"
      >
        Tourism 2040 Vision
      </h2>
      <p class="vision-subtitle text-lg md:text-xl lg:text-2xl text-white/90 drop-shadow-md">
        Click above to learn more about our partners and projects.
      </p>
    </div>
  </div>
</section>

<style>
  .tourism-vision-section {
    position: relative;
  }

  .vision-title {
    color: #ffffff !important;
  }

  .vision-subtitle {
    color: rgba(255, 255, 255, 0.9) !important;
  }

  :global([data-theme='light']) .vision-title,
  :global([data-theme='light']) .vision-subtitle {
    color: #ffffff !important;
  }
</style>
